<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_google" />


        <Button
            android:id="@+id/btn_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_fb" />

        <Button
            android:id="@+id/btn_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_guest" />


        <Button
            android:id="@+id/btn_ui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI(横屏)"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_email" />

        <Button
            android:id="@+id/btn_ui_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI（竖屏）"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_ui" />

        <Button
            android:id="@+id/btn_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_ui_port" />

        <Button
            android:id="@+id/btn_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_qq" />

        <Button
            android:id="@+id/btn_gp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google Play"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_wx" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Role"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_gp" />

        <Button
            android:id="@+id/btn_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_upload" />


        <TextView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:text="Result"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_auto" />

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>